{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "show_edit_predictions": false,
  "icon_theme": "Zed (Default)",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "auto_install_extensions": {
    "html": true,
    "latex": true,
    "nix": true,
    "pylsp": true,
    "rainbow-csv": true,
    "toml": true
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "Zed Plex Mono",
  "buffer_font_size": 14,
  "ui_font_family": "Zed Plex Sans",
  "ui_font_size": 14,
  "theme": "akhlus",
  "notification_panel": {
    "dock": "left"
  },
  "agent": {
    "dock": "left",
    "version": "2"
  },
  "project_panel": {
    "dock": "right",
    "button": true
  },
  "outline_panel": {
    "button": false
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "runnables": true,
    "breakpoints": true,
    "folds": true
  },
  "terminal": {
    "dock": "bottom",
    "font_family": "BlexMono Nerd Font",
    "env": {
      "TERM": "ghostty",
      "EDITOR": "zeditor --wait"
    },
    "working_directory": "current_project_directory"
  },
  "tab_bar": {
    "show": false
  },
  "languages": {
    "Nix": {
      "format_on_save": "off",
      "language_servers": ["nixd", "!nil"],
      "tab_size": 2
    },
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["pylsp", "!pyright", "ruff"]
    }
  },
  "lsp": {
    "nixd": {
      "settings": {
        "formatting": {
          "command": ["alejandra", "--quiet"]
        },
        "options": {
          "home-manager": {
            "expr": "(builtins.getFlake \"/home/sam/dotfiles\").homeConfigurations.deck.options"
          },
          "nixos": {
            "expr": "(builtins.getFlake \"/home/sam/dotfiles\").nixosConfigurations.a3.options"
          },
          "darwin": {
            "expr": "(builtins.getFlake \"/home/sam/dotfiles\").darwinConfigurations.mba.options"
          }
        }
      }
    }
  }
}
